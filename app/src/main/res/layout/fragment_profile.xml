<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.mineee.fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        >

        <com.mineee.util.CircularNetworkImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/profPic"
            android:src="@drawable/dddd"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Keerthickchand V K "
            android:id="@+id/profName"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="following"
                android:id="@+id/following"
                android:background="@drawable/follower_buttons"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/follower"
                android:background="@drawable/follower_buttons"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/shareFb"
                android:background="@drawable/follower_buttons"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="Things I Had"
                    android:id="@+id/button" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="Things I Own"
                    android:id="@+id/button2" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="Things I Wants"
                    android:id="@+id/button3" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="Things I recommends "
                    android:id="@+id/button4" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</RelativeLayout>
